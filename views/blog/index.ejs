<!--top posts, this are most viewed post here idisplay 2-->
<div class="section">

    <div class="container">

        <div class="row">
            <% top_posts.forEach(element => { %>
            <div class="col-md-6">
                <div class="post post-thumb">
                    <a class="post-img" href="<%= '/blog/'+element.slug %>"><img src="<%= '/img/blogs/'+element.thumb %>" alt></a>
                    <div class="post-body">
                        <div class="post-meta">
                            <a class="<%= 'post-category '+element.color %> " href="<%= '/blog/category/'+element.cat_slug %>"><%= element.name %></a>
                            <span class="post-date"><%= element.created_at %></span>
                        </div>
                        <h3 class="post-title"><a href="<%= '/blog/'+element.slug %>"><%= element.title %></a></h3>
                    </div>
                </div>
            </div>
            <% }) %>

        </div>
        <br>
        <!--posts,second class viewed off set 2 limit 8 i display 6-->
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <% posts.forEach(element => { %>
                    <div class="col-md-6">
                        <div class="post">
                            <a class="post-img" href="<%= '/blog/'+element.slug %>"><img src="<%= '/img/blogs/'+element.thumb %>" alt></a>
                            <div class="post-body">
                                <div class="post-meta">
                                    <a class="<%= 'post-category '+element.color %> " href="<%= '/blog/category/'+element.cat_slug %>"><%= element.name %></a>
                                    <span class="post-date"><%= element.created_at %></span>
                                </div>
                                <h3 class="post-title"><a href="<%= '/blog/'+element.slug %>"><%= element.title %></a></h3>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
            <div class="col-md-4">

                
                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="img/ad-1.jpg" alt>
                    </a>
                </div>

                <div class="aside-widget">
                    <div class="section-title">
                        <h2>Catagories</h2>
                    </div>
                    <div class="category-widget">
                        <ul>
                            <% categories.forEach(category => { %>
                                <li><a href="<%= '/blog/category/'+category.slug %>" class="<%= 'text-capitalize '+category.color %>"><%= category.name %><span><%= category.posts %></span></a></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>

                <div class="aside-widget text-center">
                    <a href="#" style="display: inline-block;margin: auto;">
                        <img class="img-responsive" src="img/ad-1.jpg" alt>
                    </a>
                </div>

                

            </div>
        </div>
        <!--end posts,second class-->
    </div>

</div>
<!--end top post-->

